<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:elevation="2dp"
    android:padding="5dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="4dp">


        <ImageView
            android:id="@+id/location_icon"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_location_foreground"
            app:layout_constraintBottom_toBottomOf="@+id/tv_school_phone"
            app:layout_constraintEnd_toEndOf="@+id/phone_icon"
            app:layout_constraintHorizontal_bias="0.29"
            app:layout_constraintStart_toStartOf="@+id/phone_icon"
            app:layout_constraintTop_toTopOf="@+id/tv_school_phone"
            app:layout_constraintVertical_bias="0.0" />


        <ImageView
            android:id="@+id/phone_icon"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_phone_foreground"
            app:layout_constraintBottom_toBottomOf="@+id/tv_school_location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_school_location" />

        <TextView
            android:id="@+id/tv_school_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.07"
            app:layout_constraintStart_toEndOf="@+id/location_icon"
            app:layout_constraintTop_toBottomOf="@+id/tv_school_location"
            tools:text="School Location" />

        <TextView
            android:id="@+id/tv_school_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_school_phone"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_school_phone"
            app:layout_constraintTop_toBottomOf="@+id/tv_school_name"
            app:layout_constraintVertical_bias="0.305"
            tools:text="School Location" />

        <TextView
            android:id="@+id/tv_school_name"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School Name"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>
